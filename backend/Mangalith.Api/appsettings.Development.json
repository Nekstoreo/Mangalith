{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext:l} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:3001",
      "https://localhost:3000"
    ]
  },
  "Jwt": {
    "SecretKey": "development-secret-key-change-me-and-keep-at-least-64-characters-long-abcdefghi"
  },
  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": 104857600,
      "MinRequestBodyDataRate": null
    }
  },
  "FileUpload": {
    "MaxFileSizeBytes": 104857600
  }
}
